<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bright_sky_blue"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivNetworkingError"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/unhappy_face"/>

        <TextView
            android:id="@+id/tvNetworkingError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Parece que no tienes internet"
            android:layout_toRightOf="@id/ivNetworkingError"
            android:layout_marginRight="47dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:maxLines="2"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>